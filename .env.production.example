# GitHub API Configuration
GITHUB_TOKEN=your_github_token
GITHUB_OWNER=your_org_or_username
GITHUB_REPO=your_repository_name

# Deployment Mode
VITE_SERVERLESS='true'          # Set to 'true' for serverless deployment (e.g., GitHub Pages)
                               # Must be quoted string

# Game Server (only needed if VITE_SERVERLESS is 'false')
VITE_GAME_SERVER_URL=your_game_server_url

# GitHub Project (only needed if VITE_SERVERLESS is 'false')
VITE_APP_GITHUB_PROJECT_NUMBER=1