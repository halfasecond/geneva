{
  "name": "geneva",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "node select-app.js",
    "dev:geneva": "./switch-app.sh geneva dev",
    "dev:purr": "./switch-app.sh purr dev",
    "dev:paddock": "./switch-app.sh chained-horse dev",
    "build": "./switch-app.sh geneva build",
    "build:geneva": "./switch-app.sh geneva build",
    "build:purr": "./switch-app.sh purr build",
    "build:paddock": "./switch-app.sh chained-horse build",
    "build:all": "yarn build:geneva && yarn build:purr && yarn build:paddock",
    "start": "yarn build:all && (yarn serve:purr &) && (yarn serve:paddock &) && NODE_NO_WARNINGS=1 babel-node -r @babel/register --extensions '.ts' src/server/index.ts",
    "preview": "yarn vite preview",
    "preview:geneva": "VITE_APP=geneva yarn vite preview --outDir dist/geneva",
    "preview:purr": "VITE_APP=purr yarn vite preview --outDir dist/purr",
    "preview:paddock": "VITE_APP=chained-horse yarn vite preview --outDir dist/paddock",
    "serve:purr": "serve -s dist/purr -l 7001",
    "serve:paddock": "serve -s dist/paddock -l 7002",
    "lint": "yarn eslint .",
    "test:browser": "yarn vitest --workspace=vitest.workspace.ts",
    "test:node": "yarn vitest --workspace=vitest.workspace.node.ts",
    "test:coverage": "yarn vitest --coverage",
    "test:node:coverage": "yarn vitest --workspace=vitest.workspace.node.ts --coverage --run --coverage.include='src/server/**/*.ts' --coverage.exclude='**/*.test.ts'"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@octokit/graphql": "^8.2.0",
    "@octokit/graphql-schema": "^15.25.0",
    "@octokit/rest": "^21.1.0",
    "@openzeppelin/contracts": "^5.1.0",
    "axios": "^1.7.7",
    "bn.js": "^5.2.1",
    "express": "^4.21.2",
    "js-base64": "^3.7.7",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.0",
    "ollama": "^0.5.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "serve": "^14.2.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "styled-components": "^6.1.13",
    "web3": "^4.13.0",
    "web3-utils": "^4.3.3",
    "web3-validator": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/eslint-parser": "^7.26.0",
    "@babel/node": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@eslint/js": "^9.9.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bn.js": "^5.1.6",
    "@types/express": "^5.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20.11.19",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/browser": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5",
    "dotenv": "^16.4.7",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.48.2",
    "terser": "^5.39.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vitest": "^3.0.5",
    "vitest-browser-react": "^0.0.3"
  }
}
