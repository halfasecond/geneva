{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "vitest/globals", "express", "supertest"],
    "esModuleInterop": true
  },
  "include": [
    "vite.config.ts",
    "src/server/**/*"
  ]
}
